<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/thing"
    tools:context="com.apperun.clubchooser.TitleActivity">

    <RelativeLayout
        android:id="@+id/titleLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="8dp"
        tools:layout_editor_absoluteX="-13dp"
        tools:layout_editor_absoluteY="213dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"

            android:layout_marginTop="70dp"

            android:fontFamily="cursive"
            android:gravity="center"
            android:text="CHS club chooser"
            android:textSize="24sp" />

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="56dp"
            android:text="Start" />

        <Button
            android:id="@+id/lastResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:text="View Past Results"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/nameEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/start"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Type your name here" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/clubPicture"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/nameEntry"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_centerHorizontal="true"
            android:text="name" />

        <Button
            android:id="@+id/listOnly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/lastResults"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:text="View club list"
            android:textColor="@color/colorPrimary" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
